@model IEnumerable<ServiceProviderListViewModel>

@{
    ViewData["Title"] = "قائمة مقدمي الخدمات";
}

<h2 class="mb-4">قائمة مقدمي الخدمات</h2>

<a asp-action="Create" class="btn btn-success mb-3">إضافة مقدم خدمة جديد</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>الاسم</th>
            <th>العنوان</th>
            <th>رقم الهاتف</th>
            <th>التحكم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var provider in Model)
        {
            <tr>
                <td>@provider.Name</td>
                <td>@provider.Address</td>
                <td>@provider.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@provider.Id" class="btn btn-sm btn-warning me-2">تعديل</a>
                    <form asp-action="Delete" asp-route-id="@provider.Id" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
