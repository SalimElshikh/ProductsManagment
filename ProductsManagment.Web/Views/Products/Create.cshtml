@model ProductsManagment.Web.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "إضافة منتج جديد";
}

<h2 class="mb-4">إضافة منتج جديد</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CreatedOn" class="form-label"></label>
        <input asp-for="CreatedOn" class="form-control" type="date" />
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ServiceProviderId" class="form-label">مقدم الخدمة</label>
        <select asp-for="ServiceProviderId" asp-items="Model.Providers" class="form-select">
            <option value="">-- اختر مقدم الخدمة --</option>
        </select>
        <span asp-validation-for="ServiceProviderId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">إضافة المنتج</button>
        <a asp-action="Index" class="btn btn-secondary">رجوع</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
