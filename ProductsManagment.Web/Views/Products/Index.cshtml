
@model IEnumerable<ProductListViewModel>

@{
    ViewData["Title"] = "قائمة المنتجات";
}

<h2 class="mb-4">قائمة المنتجات</h2>

<a asp-action="Create" class="btn btn-primary mb-3">إضافة منتج جديد</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>الاسم</th>
            <th>السعر</th>
            <th>تاريخ الإضافة</th>
            <th>مقدم الخدمة</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.CreatedOn.ToString("yyyy/MM/dd")</td>
                <td>@item.ServiceProviderName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">تعديل</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('هل أنت متأكد أنك تريد حذف هذا المنتج؟');">
                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
